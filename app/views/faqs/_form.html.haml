= form_for @faq do |f|
  -if @faq.errors.any?
    #error_explanation
      %h2= "#{pluralize(@faq.errors.count, "error")} prohibited this faq from being saved:"
      %ul
        - @faq.errors.full_messages.each do |msg|
          %li= msg


  .field
    = f.label :question
    = f.text_field :question
  .field
    = f.label :answer
    = f.text_area :answer
  .field
    = f.label :display
    = f.check_box :display
  .actions
    = f.submit 'Save'
